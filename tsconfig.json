{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "outDir": "./build",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "express"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}